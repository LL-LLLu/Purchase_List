// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // Uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // Uses direct connection
}

model Item {
  id             Int      @id @default(autoincrement())
  title          String
  price          Decimal
  purchaseDate   DateTime?
  status         String   @default("Delivered") // Delivered, Pre-Order, Returned, Wishlist
  isSubscription Boolean  @default(false) // Monthly/recurring subscription
  rating         Int?     // 1-5 rating
  review         String?  // The user experience content
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  storeId      Int
  store        Store    @relation(fields: [storeId], references: [id])

  brandId      Int?
  brand        Brand?   @relation(fields: [brandId], references: [id])

  yearId       Int
  year         Year     @relation(fields: [yearId], references: [id])

  categoryId   Int
  category     Category @relation(fields: [categoryId], references: [id])

  images       ItemImage[]
}

model ItemImage {
  id        Int      @id @default(autoincrement())
  url       String   // File path or URL
  order     Int      @default(0) // For ordering images
  isCover   Boolean  @default(false) // Cover image for the item
  itemId    Int
  item      Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Store {
  id    Int    @id @default(autoincrement())
  name  String @unique
  items Item[]
}

model Brand {
  id    Int    @id @default(autoincrement())
  name  String @unique
  items Item[]
}

model Year {
  id    Int    @id @default(autoincrement())
  value Int    @unique
  items Item[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  items Item[]
}
